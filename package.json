{
  "name": "waes-assignment",
  "version": "1.0.0",
  "description": "User interaction (Text highlighter and filter)",
  "keywords": [
    "WAES",
    "Assignment",
    "Code Challenge",
    "highlighter"
  ],
  "main": "src/index.js",
  "scripts": {
    "start": "react-scripts start",
    "make-badges": "node_modules/.bin/jest-badges-readme || true",
    "make-readme": "npm run test && npm run make-badges",
    "prebuild": "echo false > .buildstatus",
    "postbuild": "echo true > .buildstatus && npm run make-readme",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom --coverage || true",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "react": "16.6.3",
    "react-dom": "16.6.3",
    "react-scripts": "2.1.1"
  },
  "devDependencies": {
    "@olavoparno/jest-badges-readme": "^1.2.4",
    "styled-components": "^4.1.2"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/",
      "!<rootDir>/path/to/dir/"
    ],
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    }
  }
}
